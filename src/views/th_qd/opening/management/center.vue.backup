// æ ¼å¼åŒ–æ—¶é—´æˆ³
const formatTimestamp = (timestamp) => {
  if (!timestamp) return '-'
  try {
    const date = new Date(timestamp)
    if (isNaN(date.getTime())) return '-'
    return date.toLocaleDateString('zh-CN', {
      year: 'numeric',
      month: '2-digit',
      day: '2-digit'
    })
  } catch (error) {
    console.error('æ—¶é—´æ ¼å¼åŒ–é”™è¯¯:', error)
    return '-'
  }
}

// æ ¼å¼åŒ–é¢„æœŸæ—¶é—´ï¼ˆå¤„ç†æ•°ç»„æ ¼å¼ï¼‰
const formatExpectedTime = (expectedTime) => {
  if (!expectedTime) return '-'
  
  // å¦‚æœæ˜¯æ•°ç»„æ ¼å¼ [year, month, day]
  if (Array.isArray(expectedTime) && expectedTime.length === 3) {
    const [year, month, day] = expectedTime
    // æœˆä»½éœ€è¦+1ï¼Œå› ä¸ºæ•°ç»„ä¸­çš„æœˆä»½æ˜¯ä»0å¼€å§‹çš„
    const monthStr = String(month + 1).padStart(2, '0')
    const dayStr = String(day).padStart(2, '0')
    return `${year}-${monthStr}-${dayStr}`
  }
  
  // å¦‚æœæ˜¯å­—ç¬¦ä¸²æ ¼å¼ï¼Œç›´æ¥è¿”å›
  if (typeof expectedTime === 'string') {
    return expectedTime
  }
  
  // å¦‚æœæ˜¯æ—¶é—´æˆ³ï¼Œè½¬æ¢ä¸ºæ—¥æœŸ
  if (typeof expectedTime === 'number') {
    try {
      const date = new Date(expectedTime)
      if (!isNaN(date.getTime())) {
        return date.toLocaleDateString('zh-CN', {
          year: 'numeric',
          month: '2-digit',
          day: '2-digit'
        })
      }
    } catch (error) {
      console.error('é¢„æœŸæ—¶é—´æ ¼å¼åŒ–é”™è¯¯:', error)
    }
  }
  
  return '-'
}

